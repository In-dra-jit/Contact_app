<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Contact List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">
  <div class="container my-5">
    <div class="text-center mb-4">
      <h2 class="fw-bold text-primary">ğŸ“‡ My Contact List</h2>
      <p class="text-muted">Manage your saved contacts efficiently</p>
    </div>

    <div class="d-flex justify-content-end mb-3">
      <a href="/add-contact" class="btn btn-success shadow-sm">â• Add New Contact</a>
    </div>

    <div class="table-responsive shadow-sm rounded">
      <table class="table table-bordered table-hover table-striped align-middle mb-0 bg-white">
        <thead class="table-dark">
          <tr>
            <th style="width: 5%;">#</th>
            <th style="width: 25%;">Name</th>
            <th style="width: 25%;">Email</th>
            <th style="width: 20%;">Phone</th>
            <th style="width: 25%;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% contacts.forEach((contact, index)=> { %>
            <tr>
              <td>
                <%= index + 1 %>
              </td>
              <td>
                <a href="/show-contact/<%= contact._id %>" class=" text-decoration-none fw-semibold text-black">
                  <%= contact.name %>
                </a>
              </td>
              <td>
                <%= contact.email %>
              </td>
              <td>
                <%= contact.phone %>
              </td>
              <td>
                <a href="/update-contact/<%= contact._id %>" class="btn btn-sm btn-warning me-2">
                  âœï¸ Edit
                </a>

                <a href="/show-contact/<%= contact._id %>" class="btn btn-sm btn-primary me-2">
                  ğŸ‘ï¸ View
                </a>
                <form action="/delete-contact/<%= contact._id %>" method="POST" class="d-inline">
                  <button type="submit" class="btn btn-sm btn-danger">ğŸ—‘ï¸ Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>

    <!-- Pagination -->
    <div class="d-flex justify-content-center mt-4">
      <nav aria-label="Page navigation">
        <ul class="pagination">
          <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
              <a class="page-link" href="/?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    </div>

  </div>
</body>

</html>
